<h1>All Blog Posts</h1>
<% @posts.each do |post| %>
  <div class="row">
    <div class="card col-sm-12 mb-2">
      <div class="card-body">
        <h4 class="card-title"><%= post.title %></h4>
        <p class="card-text"><%= post.body %></p>
        <%= link_to "Read More", post_path(post), :class => 'btn btn-light' %>
      </div>
    </div>
  </div>
<% end %>