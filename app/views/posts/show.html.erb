<div class="container">
  <div class="row">
    <div class="col-12">
      <h2><%= @post.title %></h2>
    </div>
    <div class="col-12">
      <p><%= @post.body %></p>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-12">
      <%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-light'%>
      <%= link_to "Delete", post_path(@post),
                  method: :delete,
                  data: {confirm: 'Are you sure?'},
                  :class => 'btn btn-danger'%>
    </div>
  </div>
  <hr>
  <%= render 'comments/comments' %>
  <%= render 'comments/form' %>
</div>
