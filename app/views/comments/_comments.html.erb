<div class="row">
  <div class="col-12">
    <h3>Comments</h3>
  </div>
  <div class="col-12">
    <%  @post.comments.each do |comment| %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <strong>Commenter: </strong>
            <%= comment.username %>
          </h5>

          <p class="card-text">
            <strong>Comment:</strong>
            <%= comment.body %>
          </p>
          <%= link_to "[x]", [comment.post, comment],
                      method: :delete,
                      data: {confirm: 'Are you sure?'}%>
        </div>

      </div>

    <% end %>
  </div>
</div>
<hr>